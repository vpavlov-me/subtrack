# =============================================
# PRODUCTION ENVIRONMENT (Server-side only)
# =============================================

# Supabase Production (Server-side only)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Stripe (Server-side only)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Slack Integration (Server-side only)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# =============================================
# CLIENT-SIDE ENVIRONMENT (VITE_ prefix)
# =============================================

# Supabase Configuration (Client-side)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Development Supabase (for test auth)
VITE_SUPABASE_DEV_URL=https://your-dev-project.supabase.co
VITE_SUPABASE_DEV_ANON_KEY=your-dev-supabase-anon-key

# Test Authentication
VITE_TEST_AUTH=1

# WorkOS AuthKit (Client-side) - Legacy
VITE_WORKOS_CLIENT_ID=your-workos-client-id

# Stripe (Client-side)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Monitoring & Analytics (Client-side)
VITE_SENTRY_DSN=https://your-sentry-dsn@your-project.ingest.sentry.io/your-project-id
VITE_POSTHOG_KEY=phc_your-posthog-key
VITE_POSTHOG_HOST=https://app.posthog.com

# =============================================
# DEVELOPMENT SETTINGS
# =============================================

# Development Only
VITE_DEBUG_MODE=true
VITE_API_MOCKING=enabled

# Test Users (for seeding)
TEST_ADMIN_EMAIL=admin@demo.dev
TEST_MEMBER_EMAIL=member@demo.dev
TEST_USER_PASSWORD=test123456

